import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: HomeClass(),
    );
  }
}

class HomeClass extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        leading: const Icon(Icons.menu_open_sharp),
        title: const Text("Appbar"),
        actions: const [
          Icon(Icons.search),
          Icon(Icons.settings),
          Icon(Icons.contact_support)
        ],
      ),
      body: TheBody(),
    );
  }
}

class TheBody extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Column(children: [
      Sector1(),
      Sector2(),
    ]);
  }
}

class Sector1 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Container(
      width: 200,
      height: 200,
      padding: const EdgeInsets.all(20),
      margin: const EdgeInsets.all(20),
      decoration: BoxDecoration(
        color: Colors.cyan,
        border: Border.all(width: 3, color: Colors.black),
      ),
    );
  }
}

class Sector2 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Container(
      width: 200,
      height: 200,
      padding: const EdgeInsets.all(20),
      margin: const EdgeInsets.all(20),
      decoration: BoxDecoration(
        color: Colors.cyan,
        border: Border.all(width: 3, color: Colors.black),
      ),
      child: Column(
        children: const [
          TaskItem(label: "Task Item 1"),
          TaskItem(label: "Task Item 2"),
          TaskItem(label: "Task Item 3"),
        ],
      ),
    );
  }
}

class TaskItem extends StatelessWidget {
  final String label;

  const TaskItem({Key? key, required this.label}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Row(children: [
      const Checkbox(onChanged: null, value: false),
      Text(label),
    ]);
  }
}
